@media (max-width: 767px) {
/* Base underline track: gradient that scrolls with the tabs */
.wm-tabs[data-navigation-type="horizontal"] .tabs-header nav .indicator-track {
  background: linear-gradient(
    to right,
    transparent 0,
    var(--tab-indicator-track-background, currentColor) 15%,
    var(--tab-indicator-track-background, currentColor) 85%,
    transparent 100%
  );
}
}



@media (max-width: 767px) {
  /* header = visible width + clipping box */
  .wm-tabs[data-navigation-type="horizontal"] .tabs-header {
    position: relative;
    overflow: hidden;                  /* nothing can stick out left/right */
  }

  /* nav scrolls inside the clipped header */
  .wm-tabs[data-navigation-type="horizontal"] .tabs-header nav {
    display: flex;
    min-width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  /* track matches header width, with equal insets */
  .wm-tabs[data-navigation-type="horizontal"] .tabs-header nav .indicator-track {
    position: absolute;
    left: 17px;
    right: 17px;                       /* SAME inset on both sides */
    margin: 0 !important;
  }
}